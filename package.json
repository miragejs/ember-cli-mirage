{
  "name": "ember-cli-mirage",
  "version": "3.0.0-alpha.3",
  "private": true,
  "description": "A client-side server to help you build, test and demo your Ember app",
  "homepage": "https://github.com/miragejs/ember-cli-mirage",
  "repository": {
    "type": "git",
    "url": "https://github.com/miragejs/ember-cli-mirage.git"
  },
  "license": "MIT",
  "author": "Sam Selikoff",
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],
  "scripts": {
    "release": "release-it",
    "test": "cd packages/ember-cli-mirage && yarn test:ember"
  },
  "resolutions": {
    "@embroider/core": "1.6.0",
    "@embroider/macros": "1.6.0",
    "@embroider/shared-internals": "1.6.0",
    "@embroider/util": "1.6.0",
    "colors": "1.4.0",
    "favicons": "5.3.0"
  },
  "devDependencies": {
    "release-it": "^14.14.2",
    "release-it-lerna-changelog": "^4.0.1",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp CHANGELOG.md LICENSE.md README.md packages/ember-cli-mirage/",
      "after:release": "cd packages/ember-cli-mirage-docs && yarn deploy"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "release-it-yarn-workspaces": {
        "publish": false,
        "workspaces": [
          "packages/ember-cli-mirage"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "package.json",
            "packages/ember-cli-mirage-docs/package.json",
            "test-packages/*/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "packages/ember-cli-mirage-docs/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "16.20.2",
    "yarn": "1.22.18"
  }
}
